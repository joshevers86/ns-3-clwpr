	obj.source = 'physim-1sender-only-rayleigh.cc'
	obj = bld.create_ns3_program('physim-regression-test', ['core', 'simulator', 'mobility', 'wifi', 'physim-wifi'])
	obj.source = 'physim-regression-test.cc'